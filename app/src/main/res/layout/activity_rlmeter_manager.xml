<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.rthc.switchboxtrhc.RLMeterManagerActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/meterIdManageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normalselector"
        android:textColor="@android:color/white"
        android:text="地址管理"/>
    <Button
        android:id="@+id/infoManageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normalselector"
        android:text="信息录入"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/goReadMeterDataActivityBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normalselector"
        android:text="抄表"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/goHistoryActivityBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normalselector"
        android:text="历史数据"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>


</LinearLayout>
