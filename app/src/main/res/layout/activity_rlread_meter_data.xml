<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_margin="16dp"
    tools:context="com.rthc.switchboxtrhc.RLReadMeterDataActivity"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:text="小区"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/buildingsSpinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"></Spinner>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:text="楼栋"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/banIdSpinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            ></Spinner>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:text="单元"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/unitIdSpinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"></Spinner>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:text="楼层"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/floorEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:maxLines="1"
            android:inputType="number"/>

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:text="门牌"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/houseNumEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:maxLines="1"
            android:inputType="number"/>

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="查询" />
    </LinearLayout>

    <Button
        android:id="@+id/readMetersBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="抄表" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>
